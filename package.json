{
  "name": "minna-ui-monorepo",
  "private": true,
  "repository": "https://github.com/WeAreGenki/minna-ui",
  "license": "Apache-2.0",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "docs": "docsify serve ./docs",
    "predocs": "rm -rf docs/_dist && build-css docs/_src docs/_dist --no-banner",
    "release": "npm run prepack && lerna publish",
    "release:next": "npm run prepack && lerna publish --canary --preid=next --exact --dist-tag=next --allow-branch=next",
    "release:fix-failed": "lerna publish from-package",
    "prerelease": "npm run lint && npm run test-ci",
    "prerelease:next": "npm run prerelease",
    "prepack": "npm run build && npm run predocs",
    "build": "lerna run build --stream",
    "prebuild": "npm run clean",
    "clean": "lerna clean --yes",
    "lint": "npm run lint:md && npm run lint:css && npm run lint:js && npm run lint:types",
    "lint:md": "remark --frail --quiet .",
    "lint:css": "stylelint **/*.{css,html,js,md,mjs,svelte,svg,ts}",
    "lint:js": "eslint --ext html,js,md,mjs,svelte,svg,ts .",
    "lint:types": "tsc --noEmit",
    "test": "jest --notify --watch",
    "test-ci": "jest --coverage --runInBand --ci",
    "report:browsers": "browserslist",
    "report:css": "autoprefixer --info"
  },
  "dependencies": {
    "@minna-ui/browserslist-config": "file:utils/browserslist-config",
    "@minna-ui/build-component": "file:utils/build-component",
    "@minna-ui/build-css": "file:utils/build-css",
    "@minna-ui/build-lib": "file:utils/build-lib",
    "@minna-ui/collapse": "file:components/collapse",
    "@minna-ui/css": "file:css",
    "@minna-ui/eslint-config": "file:utils/eslint-config",
    "@minna-ui/jest-config": "file:utils/jest-config",
    "@minna-ui/navbar": "file:components/navbar",
    "@minna-ui/postcss-config": "file:utils/postcss-config",
    "@minna-ui/preprocess": "file:utils/preprocess",
    "@minna-ui/prettier-config": "file:utils/prettier-config",
    "@minna-ui/remark-config": "file:utils/remark-config",
    "@minna-ui/rollup-plugin-dev-server": "file:utils/rollup-plugin-dev-server",
    "@minna-ui/rollup-plugin-emit-css": "file:utils/rollup-plugin-emit-css",
    "@minna-ui/rollup-plugin-emit-html": "file:utils/rollup-plugin-emit-html",
    "@minna-ui/rollup-plugin-postcss": "file:utils/rollup-plugin-postcss",
    "@minna-ui/rollup-plugin-purgecss": "file:utils/rollup-plugin-purgecss",
    "@minna-ui/select": "file:components/select",
    "@minna-ui/stylelint-config": "file:utils/stylelint-config",
    "@minna-ui/switch": "file:components/switch",
    "@minna-ui/tooltip": "file:components/tooltip",
    "@minna-ui/ts-config": "file:utils/ts-config",
    "@minna-ui/utils": "file:utils/utils",
    "minna-css": "file:utils/minna-css",
    "minna-tools": "file:utils/minna-tools",
    "minna-ui": "file:utils/minna-ui"
  },
  "devDependencies": {
    "@types/autoprefixer": "9.5.0",
    "@types/clean-css": "4.2.1",
    "@types/cssnano": "4.0.0",
    "@types/mri": "1.1.0",
    "@types/node": "12.0.7",
    "@types/postcss-nested": "4.1.0",
    "@types/rollup-plugin-buble": "0.19.1",
    "@types/stylelint": "9.10.0",
    "@wearegenki/renovate-config": "1.0.0",
    "codecov": "3.5.0",
    "del": "4.1.1",
    "docsify-cli": "4.3.0",
    "eslint": "5.16.0",
    "jest": "24.8.0",
    "lerna": "3.15.0",
    "magic-string": "0.25.2",
    "postcss": "7.0.17",
    "postcss-extend-rule": "2.0.0",
    "postcss-nested": "4.1.2",
    "postcss-scss": "2.0.0",
    "prettier": "1.18.2",
    "remark-cli": "6.0.1",
    "rollup": "1.15.1",
    "stylelint": "10.1.0",
    "svelte": "3.5.1",
    "tslib": "1.10.0",
    "typescript": "3.5.1"
  },
  "browserslist": {
    "production": [
      "extends @minna-ui/browserslist-config"
    ],
    "development": [
      "extends @minna-ui/browserslist-config/dev"
    ]
  },
  "postcss": {
    "plugins": {
      "@minna-ui/postcss-config": {
        "importAlias": {
          "^import\\.css$": "@minna-ui/css/src/import.css"
        },
        "unsafe": true
      }
    },
    "syntax": "postcss-scss"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@minna-ui/eslint-config",
      "@minna-ui/eslint-config/typed",
      "@minna-ui/eslint-config/svelte"
    ]
  },
  "eslintIgnore": [
    "**/dist/**",
    "**/node_modules/**",
    "/docs/index.html",
    "/test/coverage/**",
    "/utils/*/cli/index.js",
    "/utils/eslint-config/__tests__/__fixtures__",
    "/utils/jest-config/fixtures/TestComponentBadSyntax.svelte"
  ],
  "stylelint": {
    "extends": "@minna-ui/stylelint-config",
    "ignoreFiles": [
      "**/*.d.ts",
      "**/dist/**",
      "**/node_modules/**",
      "components/tooltip/README.md",
      "docs/_dist/**",
      "docs/index.html",
      "test/coverage/**",
      "utils/jest-config/fixtures/styles-bad-syntax.css",
      "utils/jest-config/fixtures/TestComponentBadSyntax.svelte",
      "utils/minna-css/*.css"
    ],
    "rules": {
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "after-single-line-comment",
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  },
  "remarkConfig": {
    "plugins": [
      "@minna-ui/remark-config",
      [
        "lint-no-file-name-irregular-characters",
        "\\.a-zA-Z0-9-_"
      ]
    ]
  },
  "prettierIgnore": [
    "cli/index.js",
    "dist",
    "docs/index.html",
    "node_modules",
    "package-lock.json",
    "test/coverage"
  ],
  "jest": {
    "preset": "@minna-ui/jest-config",
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 40,
        "lines": 40,
        "statements": 40
      }
    }
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">=12.4.0",
    "npm": ">=6.9.0"
  }
}
