{
  "version": "0.21.0",
  "packages": ["components/*", "css", "utils/*"],
  "command": {
    "publish": {
      "allowBranch": "master"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/.*rc.js",
    "**/.*rc",
    "**/*.config.js",
    "**/*.md",
    "**/dist/**",
    "**/test/**"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "registry": "https://registry.npmjs.org/"
}
