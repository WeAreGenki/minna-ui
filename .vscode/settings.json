{
  // XXX: Optional
  //"files.associations": {
  //  // better syntax highlighting for PostCSS (only .css files; component styles still use the CSS language unfortunately)
  //  "*.css": "scss"
  //},
  "css.validate": false,
  "scss.validate": false,
  "javascript.implicitProjectConfig.checkJs": true,
  "eslint.enable": true,
  "eslint.validate": ["html", "javascript"],
  // recommended dictionary: https://github.com/WeAreGenki/dictionary
  "spellright.language": ["en_AU"],
  "spellright.documentTypes": [
    "css",
    "html",
    "javascript",
    "json",
    "jsonc",
    "markdown",
    "plaintext",
    "postcss",
    "text",
    "yml"
  ],
  "spellright.spellContext": "body code comments strings",
  "stylelint.enable": true,
  "todohighlight.keywords": [
    {
      "text": "XXX:", // for implementation details or notes
      "color": "#ecf2fa",
      "backgroundColor": "#3477ca"
    },
    "NOTE:",
    "README:",
    "REFERENCE:", // for references (e.g. a link to an article)
    "TIPS:",
    "USAGE:"
  ],
  "todohighlight.defaultStyle": {
    "color": "unset",
    "backgroundColor": "unset",
    "overviewRulerColor": "gray"
  }
}
