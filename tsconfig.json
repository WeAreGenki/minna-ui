// https://www.typescriptlang.org/docs/handbook/tsconfig-json.html

{
  "extends": "@minna-ui/ts-config",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": true
  },
  // FIXME: `exclude` doesn't get inherited when using `extends`
  "exclude": [
    "**/.*rc.js",
    "**/*.config.js",
    "**/__tests__/*",
    "**/dist/*",
    "**/node_modules/*",
    "test/coverage"
  ]
}
