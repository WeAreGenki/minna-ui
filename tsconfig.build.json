// https://www.typescriptlang.org/docs/handbook/tsconfig-json.html

// Config for actual package builds

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": false,
    "noEmit": false
  },
  "exclude": [
    "**/__tests__/*",
    "**/dist/*",
    "**/node_modules/*",
    "node_modules"
  ]
}
