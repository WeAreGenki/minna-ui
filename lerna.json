{
  "version": "0.25.1",
  "packages": ["components/*", "css", "utils/*"],
  "command": {
    "publish": {
      "allowBranch": "master"
    },
    "version": {
      "signGitCommit": true,
      "signGitTag": true
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/.*rc.js",
    "**/.*rc",
    "**/*.config.js",
    "**/*.md",
    "**/dist/**",
    "**/test/**"
  ]
}
