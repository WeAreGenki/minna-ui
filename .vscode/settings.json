{
  "css.validate": false,
  "editor.formatOnSave": true,
  "eslint.alwaysShowStatus": true,
  "eslint.enable": true,
  "eslint.validate": [
    { "language": "html", "autoFix": true },
    { "language": "javascript", "autoFix": true },
    { "language": "javascriptreact", "autoFix": true },
    { "language": "markdown", "autoFix": true },
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ],
  "files.associations": {
    "*.css": "scss",
    "*.pcss": "scss",
    "*.svelte": "html"
  },
  "files.eol": "\n",
  "javascript.implicitProjectConfig.checkJs": true,
  "prettier.eslintIntegration": true,
  "prettier.stylelintIntegration": true,
  "scss.validate": false,
  // recommended dictionary: https://github.com/WeAreGenki/dictionary
  "spellright.language": ["en_GB"],
  "spellright.documentTypes": [
    "css",
    "html",
    "javascript",
    "json",
    "jsonc",
    "markdown",
    "plaintext",
    "properties",
    "scss",
    "typescript"
  ],
  "spellright.spellContext": "body code comments strings",
  "stylelint.enable": true,
  "tslint.jsEnable": true

  // "[scss]": {
  //   /**
  //    * FIXME: VS Code stylelint extension doesn't allow overriding language for
  //    * file extensions. We need `*.pcss` to be parsed as scss otherwise automatic
  //    * formatting breaks on things like inline comments. Perhaps we can open an
  //    * issue in https://github.com/shinnn/stylelint-vscode to convince them to
  //    * use https://github.com/gucong3000/postcss-syntax in a way that the parser
  //    * is customisable or is selected based on the VS Code language.
  //    */
  //   /**
  //    * FIXME: Stylelint autofix doesn't take `stylelint-disable` comments into
  //    * consideration. See upstream issue:
  //    * https://github.com/stylelint/stylelint/issues/2643
  //    */
  //   "editor.formatOnSave": false
  // }
}
