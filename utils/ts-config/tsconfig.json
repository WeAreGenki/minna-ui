{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "checkJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": [
    "**/.*rc.js",
    "**/*.config.js",
    "__sapper__",
    "dist",
    "node_modules",
    "test/coverage"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
