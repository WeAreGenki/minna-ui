{
  "name": "minna-ui-monorepo",
  "private": true,
  "workspaces": [
    "components/*",
    "css",
    "utils/*"
  ],
  "scripts": {
    "setup": "yarn; lerna bootstrap",
    "docs": "docsify serve ./docs",
    "predocs": "build-css docs/_src docs/_dist --no-clean --no-banner",
    "update": "yarn upgrade-interactive --latest",
    "release:next": "yarn prepack && lerna publish --canary=prerelease --exact --npm-tag=next",
    "release:beta": "yarn prepack && lerna publish --cd-version=prerelease --preid=beta --npm-tag=beta",
    "release": "yarn prepack && lerna publish",
    "prerelease:next": "yarn prerelease",
    "prerelease:beta": "yarn prerelease",
    "prerelease": "yarn lint && yarn test-ci",
    "prepack": "yarn build && yarn predocs",
    "prebuild": "yarn clean",
    "build": "lerna run build",
    "clean": "lerna clean --yes",
    "lint": "yarn lint:css && yarn lint:js && lint:md",
    "lint:css": "stylelint **/*.{css,html} --cache",
    "lint:js": "eslint --ext html,js .",
    "lint:md": "markdownlint --ignore node_modules .",
    "test": "yarn lint && JEST_CIRCUS=1 jest --notify --watch",
    "test-ci": "JEST_CIRCUS=1 jest --coverage --runInBand --ci",
    "report:browsers": "yarn browserslist",
    "report:css": "yarn autoprefixer --info"
  },
  "devDependencies": {
    "@minna-ui/build-component": "file:utils/build-component",
    "@minna-ui/build-css": "file:utils/build-css",
    "@minna-ui/eslint-config": "file:utils/eslint-config",
    "@minna-ui/jest-config": "file:utils/jest-config",
    "@minna-ui/postcss-config": "file:utils/postcss-config",
    "@minna-ui/stylelint-config": "file:utils/stylelint-config",
    "@wearegenki/renovate-config": "1.0.0",
    "codecov": "3.1.0",
    "docsify-cli": "4.3.0",
    "eslint": "5.8.0",
    "jest": "23.6.0",
    "lerna": "3.4.3",
    "markdownlint-cli": "0.13.0",
    "postcss": "7.0.5",
    "postcss-scss": "2.0.0",
    "stylelint": "9.7.1",
    "svelte": "2.15.1"
  }
}
