{
  "name": "minna-ui-monorepo",
  "private": true,
  "workspaces": [
    "components/*",
    "css",
    "utils/*"
  ],
  "scripts": {
    "prepare": "lerna bootstrap",
    "docs": "docsify serve ./docs",
    "predocs": "build-css docs/_src docs/_dist --no-banner",
    "update": "yarn upgrade-interactive --latest",
    "preinstall": "node utils/check-yarn.js",
    "release:next": "yarn prepack && lerna publish --canary=prerelease --exact --npm-tag=next",
    "release:beta": "yarn prepack && lerna publish --cd-version=prerelease --preid=beta --npm-tag=beta",
    "release": "yarn prepack && lerna publish",
    "prerelease:next": "yarn prerelease",
    "prerelease:beta": "yarn prerelease",
    "prerelease": "yarn lint && yarn test-ci",
    "prepack": "yarn build && yarn predocs",
    "prebuild": "yarn clean",
    "build": "lerna run build",
    "clean": "lerna clean --yes",
    "lint": "yarn lint:md && yarn lint:css && yarn lint:js && yarn lint:ts && yarn lint:types",
    "lint:md": "remark --frail --quiet .",
    "lint:css": "stylelint '**/*.{css,html,md,svelte}'",
    "lint:js": "eslint --ext html,js,jsx,md,svelte,ts,tsx .",
    "lint:ts": "tslint --project tsconfig.json || true",
    "lint:types": "tsc --noEmit",
    "test": "yarn lint && JEST_CIRCUS=1 jest --notify --watch",
    "test-ci": "JEST_CIRCUS=1 jest --coverage --runInBand --ci",
    "report:browsers": "yarn browserslist",
    "report:css": "yarn autoprefixer --info"
  },
  "devDependencies": {
    "@wearegenki/renovate-config": "1.0.0",
    "codecov": "3.1.0",
    "docsify-cli": "4.3.0",
    "eslint": "5.13.0",
    "eslint-plugin-svelte3": "github:sveltejs/eslint-plugin-svelte3",
    "jest": "24.1.0",
    "lerna": "3.11.0",
    "postcss": "7.0.14",
    "postcss-scss": "2.0.0",
    "prettier": "1.16.4",
    "remark-cli": "6.0.1",
    "stylelint": "9.10.1",
    "svelte": "2.16.1",
    "tslib": "1.9.3",
    "tslint": "5.12.1",
    "typescript": "3.3.3"
  },
  "engines": {
    "node": ">10.0.0",
    "yarn": ">1.10.0"
  },
  "os": [
    "!win32",
    "darwin",
    "freebsd",
    "linux",
    "openbsd"
  ]
}
